<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">
    <title>ADD TEACHER</title>
    <%- include layout/bootstrap %>
  </head>

  <body>
    <%- include layout/header %>
      <ol class="breadcrumb" align=left>
        <li><a href="/homepage">Homepage</a></li>
        <li><a href="/teacher">Teacher</a></li>
        <li class="active">Add Teacher</li>
      </ol>
      <div class="title" align=center>
        <h1>FORM</h1>
        <form action="/teacher/add" method="post">
          <input type="text" name="depan" placeholder="Insert Your First name"><br>
          <input type="text" name="belakang" placeholder="Insert Your Last name"><br>
          <input type="text" name="email" placeholder="Insert Your email"><br>
          <select name="subId">
          <% subs.forEach( sub => { %>
        <option value="<%=sub.id%>">
          <%=sub.subject_name%>
        </option>
        <% }) %>
          </select>
          <input type="submit" value="Submit">
        </form>

        <br><br>
        <a href="/teacher" class="btn btn-primary btn-lg active">BACK</a>
      </div>
  </body>

</html>
